                                            CommandParameter="{Binding ElementName=TableOfContents, Path=SelectedItem}"
                                            Visibility="{Binding ElementName=TableOfContents, Path=DataContext.CanEdit}"/>
                                    <Button Content="❌" ToolTip="Удалить" DockPanel.Dock="Right"
